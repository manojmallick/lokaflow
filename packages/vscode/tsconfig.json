{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}